using System;
using System.Globalization;

namespace Primeiro___Curso_de_LÃ³gica {
    class Program     {
        static void Main(string[] args)
        {
            int maior, posicao, N;
            maior = 0;
            posicao = 1;
            
            for (int i = 1; i <= 100; i++)
            {
                N = int.Parse(Console.ReadLine());
                if (N > maior)
                {
                    maior = N;
                    posicao = i;
                }
            }
            Console.WriteLine(maior);
            Console.WriteLine(posicao);
        }
    }
}
