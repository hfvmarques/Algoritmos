sing System;
using System.Globalization;

namespace Primeiro___Curso_de_LÃ³gica
{
    class Program
    {
        static void Main(string[] args)
        {
            int soma, Z, contador = 1, X = int.Parse(Console.ReadLine());

            do
            {
                Z = int.Parse(Console.ReadLine());
            } while (Z <= X);
            soma = X;
            do
            {
                soma += X + 1;
                X++;
                contador++;
            } while (soma <= Z);
            Console.WriteLine(contador);
        }
    }
}
