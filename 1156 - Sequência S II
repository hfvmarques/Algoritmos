using System;
using System.Globalization;

namespace Primeiro___Curso_de_LÃ³gica {
    class Program     {
        static void Main(string[] args)
        {
            double S = 0.0;
            int j = 1;

            for (int i=1; i <= 39; i+=2)
            {
                S += (double)i / (double)j;
                j *= 2;
            }
            Console.WriteLine(S.ToString("F2", CultureInfo.InvariantCulture));
        }
    }
}
